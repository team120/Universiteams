[
  {
    "name": "development",
    "type": "sqlite",
    "database": "database.sqlite",
    "entities": ["dist/**/*.entity{.ts,.js}"],
    "migrations": ["dist/database/migrations/*{.ts,.js}"],
    "migrationsRun": true,
    "synchronize": true,
    "dropSchema": true,
    "logging": false,
    "cli": { "migrationsDir": "src/database/migrations" }
  },
  {
    "name": "test",
    "type": "sqlite",
    "database": ":memory:",
    "synchronize": true,
    "logging": false,
    "entities": ["src/**/*.entity.ts"],
    "migrations": ["src/database/migrations/*.ts"],
    "migrationsRun": true
  }
]
